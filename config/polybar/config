;###########################################;
;#########Configuração cmus#################;
;###########################################;

;------modulo cmus -------------;
[module/cmus]
type = custom/script
exec = sh $HOME/.config/polybar/scripts/cmus.sh
click-left = sh $HOME/.config/polybar/scripts/open_cmus.sh
click-right = cmus-remote -C wq
label = %output%
interval = 1

;-------modulo-cmus-repeat-----;
[module/repeat]
type = custom/script
exec = sh $HOME/.config/polybar/scripts/repeat.sh
click-left = sh $HOME/.config/polybar/scripts/func_repeat.sh
label = %output%
interval = 1

;------ modulo-cmus-next ------;
[module/next]
type = custom/script

click-left = cmus-remote -n
exec = sh $HOME/.config/polybar/scripts/next.sh
label = %output%
interval = 1

;------modulo-cmus-play---------;
[module/play]
type = custom/script

click-left = cmus-remote -u
exec = sh $HOME/.config/polybar/scripts/play.sh
label = %output%
interval = 1

;------modulo-cmus-prev---------;
[module/prev]
type = custom/script

click-left = cmus-remote -r
exec = sh $HOME/.config/polybar/scripts/prev.sh

label = %output%
interval = 1

;------modulo-cmus-shuffle---------;
[module/shuffle]
type = custom/script

click-left = cmus-remote -S
exec = sh $HOME/.config/polybar/scripts/shuffle.sh

label = %output%
interval = 1

;----------volume-cmus------------;
[module/cmusvol]
type = custom/script
exec = sh ~/.config/polybar/scripts/cmusvol.sh 
label = %output%
interval = 1

;-----modulo-volume-add--------;
[module/voladd]
type = custom/script
exec = sh ~/.config/polybar/scripts/voladd.sh
label = %output%
click-left = cmus-remote -v +10%
interval = 1

;-----modulo-volume-rem--------;
[module/volrem]
type = custom/script
exec = sh ~/.config/polybar/scripts/volrem.sh
label = %output%
click-left = cmus-remote -v -10%
interval = 1


